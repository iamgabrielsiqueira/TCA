<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainWindow" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #2C3A47;" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ControllerJanelaPrincipal">
    <top>
        <VBox>
            <HBox>
                <Label text="" />
            </HBox>
            <HBox alignment="CENTER" spacing="40" style="-fx-padding: 30;">
                <VBox alignment="CENTER" spacing="10" onMouseClicked="#carregarHospedes">
                    <ImageView>
                        <image>
                            <Image url="/imagens/guest-cinza.png" />
                        </image>
                    </ImageView>
                    <Label alignment="CENTER" contentDisplay="CENTER" text="Hóspedes" textAlignment="CENTER" textFill="#cad3c8">
                        <font>
                            <Font name="Khmer OS System" size="14.0" />
                        </font></Label>
                </VBox>
                <VBox alignment="CENTER" spacing="10">
                    <ImageView>
                        <image>
                            <Image url="/imagens/service.png" />
                        </image>
                    </ImageView>
                    <Label alignment="CENTER" contentDisplay="CENTER" text="Hospedagens" textAlignment="CENTER" textFill="#cad3c8">
                        <font>
                            <Font name="Khmer OS System" size="14.0" />
                        </font></Label>
                </VBox>
                <VBox alignment="CENTER" spacing="10">
                    <ImageView>
                        <image>
                            <Image url="/imagens/bed.png" />
                        </image>
                    </ImageView>
                    <Label alignment="CENTER" contentDisplay="CENTER" text="Quartos" textAlignment="CENTER" textFill="#cad3c8">
                        <font>
                            <Font name="Khmer OS System" size="14.0" />
                        </font></Label>
                </VBox>
                <VBox alignment="CENTER" spacing="10">
                    <ImageView>
                        <image>
                            <Image url="/imagens/room-key (1).png" />
                        </image>
                    </ImageView>
                    <Label alignment="CENTER" contentDisplay="CENTER" text="Tipos de Quartos" textAlignment="CENTER" textFill="#cad3c8">
                        <font>
                            <Font name="Khmer OS System" size="14.0" />
                        </font></Label>
                </VBox>
                <VBox alignment="CENTER" spacing="10">
                    <ImageView>
                        <image>
                            <Image url="/imagens/maid (1).png" />
                        </image>
                    </ImageView>
                    <Label alignment="CENTER" contentDisplay="CENTER" text="Serviços" textAlignment="CENTER" textFill="#cad3c8">
                        <font>
                            <Font name="Khmer OS System" size="14.0" />
                        </font></Label>
                </VBox>
            </HBox>
        </VBox>
    </top>
    <center>
        <VBox style="-fx-padding: 0 30 30 30;">
            <VBox style="-fx-padding: 0 0 10 0;">
                <!--top right bottom left-->
                <Label prefWidth="217.0" text="Hospedagens - 19/11/2018" textFill="WHITE" fx:id="labelHoje">
                    <font>
                        <Font name="Khmer OS System" size="16.0" />
                    </font>
                </Label>
            </VBox>
            <VBox minHeight="320" style="-fx-background-color: #CAD3C8; -fx-background-radius: 5;">
                <TableView fx:id="tbHospedes" style="-fx-background-color: none;">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                    <columns>
                        <TableColumn fx:id="tcNome" style="-fx-background-color:  #dfe6e9; -fx-alignment: CENTER;" text="Hóspede" />
                        <TableColumn fx:id="tcCPF" minWidth="50" style="-fx-background-color:  #dfe6e9; -fx-alignment: CENTER;" text="Quarto" />
                        <TableColumn fx:id="tcData" minWidth="50" style="-fx-background-color:  #dfe6e9; -fx-alignment: CENTER;" text="Check In" />
                        <TableColumn fx:id="tcData2" minWidth="50" style="-fx-background-color:  #dfe6e9; -fx-alignment: CENTER;" text="Check Out" />
                    </columns>
                </TableView>
            </VBox>
        </VBox>
    </center>

</BorderPane>

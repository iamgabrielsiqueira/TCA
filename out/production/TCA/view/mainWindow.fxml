<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-color: #dfe6e9;"
            xmlns="http://javafx.com/javafx/8.0.60"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.ControllerMainWindow">
    <center>
        <GridPane alignment="CENTER" hgap="10" vgap="20">
            <HBox alignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <Label alignment="CENTER" text="Bem vindo!" textFill="#2d3436">
                    <font>
                        <Font name="NanumBarunGothic" size="24.0" />
                    </font>
               <effect>
                  <DropShadow color="#00000055" height="15.18" radius="6.2675" width="11.89" />
               </effect>
                </Label>
            </HBox>
            <HBox spacing="40" GridPane.columnIndex="0" GridPane.rowIndex="2">
                <VBox alignment="CENTER" spacing="10">
                    <ImageView fx:id="img01" onMouseClicked="#carregarHospedes">
                        <image>
                            <Image url="/imagens/users.png" />
                        </image>
                    </ImageView>
                    <Label alignment="CENTER" text="Hóspedes">
                        <font>
                            <Font name="NanumBarunGothic" size="13.0" />
                        </font>
                    </Label>
                </VBox>
                <VBox alignment="CENTER" spacing="10">
                    <ImageView onMouseClicked="#carregarHospedes">
                        <image>
                            <Image url="/imagens/hospedagem.png" />
                        </image>
                    </ImageView>
                    <Label alignment="CENTER" text="Hospedagem">
                        <font>
                            <Font name="NanumBarunGothic" size="13.0" />
                        </font>
                    </Label>
                </VBox>
                <VBox alignment="CENTER" spacing="10">
                    <ImageView onMouseClicked="#carregarHospedes">
                        <image>
                            <Image url="/imagens/quarto.png" />
                        </image>
                    </ImageView>
                    <Label alignment="CENTER" text="Quarto">
                        <font>
                            <Font name="NanumBarunGothic" size="13.0" />
                        </font>
                    </Label>
                </VBox>
                <VBox alignment="CENTER" spacing="10">
                    <ImageView onMouseClicked="#carregarHospedes">
                        <image>
                            <Image url="/imagens/chave.png" />
                        </image>
                    </ImageView>
                    <Label alignment="CENTER" text="Tipo de Quarto">
                        <font>
                            <Font name="NanumBarunGothic" size="13.0" />
                        </font>
                    </Label>
                </VBox>
                <VBox alignment="CENTER" spacing="10">
                    <ImageView onMouseClicked="#carregarHospedes">
                        <image>
                            <Image url="/imagens/tipo.png" />
                        </image>
                    </ImageView>
                    <Label alignment="CENTER" text="Serviços">
                        <font>
                            <Font name="NanumBarunGothic" size="13.0" />
                        </font>
                    </Label>
                </VBox>
            </HBox>
        </GridPane>
    </center>

</BorderPane>

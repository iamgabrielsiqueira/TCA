<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<DialogPane fx:id="mainWindow" prefHeight="180.0" prefWidth="360.0"
            style="-fx-background-color: #95a5a6;"
            xmlns="http://javafx.com/javafx/8.0.60"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.Mensagem">
    <content>
        <GridPane alignment="CENTER" hgap="10" vgap="10">
            <VBox alignment="CENTER">
                <Label text="Mensagem" textFill="#ecf0f1" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <font>
                        <Font name="Noto Sans CJK KR Bold" size="20.0" />
                    </font>
                </Label>
                <Label text="" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <Label fx:id="lbMensagem" text="[Mensagem]" textFill="#ecf0f1" GridPane.columnIndex="0" GridPane.rowIndex="3">
                    <font>
                        <Font name="Noto Sans CJK JP Medium" size="14.0" />
                    </font>
                </Label>
            </VBox>
        </GridPane>
    </content>
</DialogPane>

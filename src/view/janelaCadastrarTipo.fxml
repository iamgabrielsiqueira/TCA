        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="200.0" spacing="10" style="-fx-background-color: #636e72;" BorderPane.alignment="CENTER">
            <Label />
            <ImageView fx:id="img01">
                <image>
                    <Image url="/imagens/chave-branco.png" />
                </image>
            </ImageView>
            <Label lineSpacing="10.0" text="Tipos de Quarto" textFill="WHITE">
                <font>
                    <Font name="NanumBarunGothic" size="20.0" />
                </font>
                <effect>
                    <DropShadow color="TRANSPARENT" />
                </effect></Label>
        </VBox>
    </left>

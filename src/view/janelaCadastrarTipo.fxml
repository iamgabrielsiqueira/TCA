                <font>
                    <Font name="NanumBarunGothic" size="13.0" />
                </font>
                <VBox.margin>
                    <Insets right="25.0" />
                </VBox.margin></Button>
            <Label />
            <Label />
            <Label />
            <Label />
            <VBox alignment="CENTER" spacing="10">
                <HBox alignment="CENTER" prefHeight="268.0" prefWidth="500.0">
                    <VBox maxWidth="170" minWidth="170" spacing="21">
                        <Label text="Nome" />
                        <Label text="Valor" />
                        <Label text="Descrição" />
                    </VBox>
                    <VBox maxWidth="170" minWidth="170" spacing="10">
                        <TextField fx:id="tfNome"/>
                        <TextFieldMoney fx:id="tfValor" />
                        <TextField fx:id="tfDescricao"/>
                    </VBox>
                </HBox>
                <HBox alignment="CENTER">
                    <Button onAction="#salvarTipo" prefHeight="26.0" prefWidth="350.0" style="-fx-background-color: #74b9ff;" text="Salvar" textFill="#2d3436">
